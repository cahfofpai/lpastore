{
    "name": "lpastore",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "setup": "npm run setup:frontend && npm run setup:backend",
        "setup:frontend": "npm install",
        "setup:backend": "npm run setup:venv && . venv/bin/activate && pip install -r requirements.txt",
        "setup:venv": "python -m venv venv",
        "dev": "run-p dev:*",
        "dev:routify": "cd frontend && routify",
        "dev:vite": "cd frontend && vite",
        "dev:backend": ". venv/bin/activate && cd backend && uvicorn main:app --reload",
        "dev:generate-api": "echo 'This command is broken' && exit && sleep 5 && openapi -i http://localhost:8000/openapi.json -o frontend/src/lib/client -c axios",
        "preview": "cd frontend && vite preview",
        "build": "run-s build:*",
        "build:routify": "cd frontend && routify -b",
        "build:vite": "cd frontend && vite build",
        "generate-api": "run-p dev:backend dev:generate-api",
        "check": "cd frontend && svelte-check --tsconfig ./tsconfig.json",
        "clean": "rm -r venv && rm -r node_modules"
    },
    "devDependencies": {
        "@mdi/js": "^6.9.96",
        "@roxi/routify": "^2.18.4",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.34",
        "@tsconfig/svelte": "^3.0.0",
        "axios": "^0.27.2",
        "npm-run-all": "^4.1.5",
        "openapi-typescript-codegen": "^0.23.0",
        "svelte": "^3.45.0",
        "svelte-check": "^2.8.0",
        "svelte-materialify": "^0.3.11",
        "svelte-preprocess": "^4.10.7",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4",
        "vite": "^2.7.10",
        "vite-plugin-rewrite-all": "^0.1.2"
    }
}
